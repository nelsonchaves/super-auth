%b Id:
= link_to user.id, user_path(user)
%br/
%b Email:
= user.email
%br/
%b Confirmation:
= user.confirmed?
%br/
%b
  = 'sign_in_count'.humanize
  \:
= user.sign_in_count
%br/
%b
  = 'current_sign_in_at'.humanize
  \:
= user.current_sign_in_at
%br/
%b
  = 'last_sign_in_at'.humanize
  \:
= user.last_sign_in_at
%br/
%b
  = 'current_sign_in_ip'.humanize
  \:
= user.current_sign_in_ip
%br/
%b
  = 'last_sign_in_ip'.humanize
  \:
= user.last_sign_in_ip
%br/
%b
  = 'locked_at'.humanize
  \:
= user.locked_at
%br/
= link_to ban_status(user), ban_user_path(user), method: :patch
%br/
= link_to "Delete", user, method: :delete, data: {confirm: "Are you sure"}
